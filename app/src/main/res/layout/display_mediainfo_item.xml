<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        >

        <com.jx.jzrecord.Fragment.RadiuImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            app:radius="5dp" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/play_file"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:shadowColor="#000000"
            android:shadowRadius="1"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#ff222222"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/file_name"
            android:layout_marginTop="10dp"
            android:text="8.7Mb"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/tv_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/share_file" />

        <ImageView
            android:id="@+id/tv_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_share"
            android:layout_alignParentBottom="true"
            android:src="@drawable/edit_file" />

        <ImageView
            android:id="@+id/tv_delete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_edit"
            android:layout_alignParentBottom="true"
            android:src="@drawable/delete_file" />
    </RelativeLayout>

</LinearLayout>
