<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:id="@+id/BigChange_window_layout"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:background="@drawable/bg_xfc"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="10dp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_above="@+id/time"
        android:orientation="vertical"
        android:layout_marginBottom="15dp"
        >
        <Button
            android:id="@+id/change_home"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/window_homepage_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/time"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginEnd="17dp">
        <Button
            android:id="@+id/change_pause"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/window_pause_icon" />
        <TextView
            android:id="@+id/textuse3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="暂停"
            android:textSize="8dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_toEndOf="@+id/time"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp">
        <Button
            android:id="@+id/change_stop"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/window_stop_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="8dp"
            android:textColor="@color/white"
            android:text="停止" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/change_hide"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/window_hide_icon" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隐藏"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</RelativeLayout>
