<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout style="@style/top_title_style"
        android:id="@+id/file_list_title"
        android:background="#F75F1D">
        <!-- 登录 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/file_title_name"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
    <ListView
        android:id="@+id/mediaListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file_list_title"
        android:dividerHeight="1px"
        android:divider="@color/setting_line">
    </ListView>
    <LinearLayout
        android:id="@+id/no_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/empty"
            android:layout_width="240dp"
            android:layout_height="154dp"
            android:src="@drawable/no_video"/>
        <TextView
            android:id="@+id/no_video_text"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无视频~"/>
    </LinearLayout>
</RelativeLayout>